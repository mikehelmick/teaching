// A program that calculates the y coordinates in linear equations
public class Lab3 {
    
    public static void main( String[] args ) {
        // get a Scanner
        Scanner kb = new Scanner( System.in );
        
        // get the A and B constaints
        System.out.println("For equations of the form a*x + b");
        System.out.print("Enter a value for a: ");
        double a = kb.nextDouble();
        System.out.print("Enter a value for b: ");
        double b = kb.nextDouble();
        
        // output equation
        System.out.println("Calculating coordinates using the equation " + a +" * x + " + b);
        
        // X coordinates
        System.out.print("Enter x value: " );
        double x = kb.nextDouble();
        double y = a * x + b;
        System.out.println( a + " * " + x + " + " + b + " = " + y );
        
        // quadratic equation
        System.out.println("For equations of the form a^2*x + b*x + c");
        System.out.print("Enter a value for c: ");
        double c = kb.nextDouble();
        
        // output equation
        System.out.println("Calculating coordinates using the equation " + a +"^2 * x + " + b + " * x + " + c );
        System.out.print("Enter x value: " );
        x = kb.nextDouble();
        y = a * a * x + b * x + c;
        System.out.println( a + "^2 * " + x + " + " + b + " * " + x + " + " + c + " = " + y );
        
    }
 
}